        <link rel="stylesheet" href="{% webpack 'main.css' %}">
    </head>

    <body class="{% block body_class %}{% endblock %}" id="body">

        {# HEADER #}
        <header class="header-main">
            {% block header %}
                {{ content | safe }}
            {% endblock %}
        </header>

        {# MAIN #}
        <main tabindex="-1" id="main" class="main">
            {% block content %}
                {{ content | safe }}
            {% endblock %}

            {# About #}
            {% set about = about[0] %}
            <div class="modal">
                <div class="modal__content">
                    {% include "components/about.njk" %}
                </div>

                <div class="modal__close">
                    <button class="btn | js-about-toggle">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" width="1em" height="1em" style="--icon-ratio: 1;" class="icon" aria-hidden="true">
                            <line x1="1" y1="1" x2="19" y2="19"></line><line x1="1" y1="19" x2="19" y2="1"></line>
                        </svg>
                    </button>
                </div>
            </div>
        </main>

        <footer class="footer-main">
            <a href="#">Imprint</a>
        </footer>

        <script async defer src="{% webpack 'main.js' %}"></script>

